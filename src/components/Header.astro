---
import { Image } from "astro:assets";
---

<header class="py-7 border-b border-base-content/5">
  <div class="container flex items-center">
    <a
      aria-current="page"
      class="flex items-center justify-center gap-5 md:justify-start cursor-pointer"
      href="/#"
    >
      <Image
        src="/images/logo.png"
        alt="Motivational Books"
        width={48}
        height={48}
      />
      <h2 class="text-3xl font-extrabold">Motivational Books</h2>
    </a>
  </div>
